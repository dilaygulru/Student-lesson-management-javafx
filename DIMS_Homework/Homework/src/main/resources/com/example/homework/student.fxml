<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="380.0" prefWidth="570.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.homework.Controllers.StudentController">
    <children>
        <VBox layoutX="30.0" layoutY="36.0" prefHeight="215.0" prefWidth="170.0" spacing="20.0">
            <children>
                <Label text="Student Information System" />
                <Label text="Student Id" />
                <Label text="Student Name" />
                <Label text="Student Surname" />
            </children>
            <padding>
                <Insets left="10.0" />
            </padding>
        </VBox>
        <VBox layoutX="175.0" layoutY="59.0" prefHeight="106.0" prefWidth="267.0" spacing="15.0">
            <children>
                <TextField fx:id="txtId" />
                <TextField fx:id="txtName" />
                <TextField fx:id="txtSurname" />
            </children>
        </VBox>
        <Button fx:id="btnFetch" layoutX="63.0" layoutY="251.0" mnemonicParsing="false"
                onAction="#onFetchButtonClick" prefHeight="7.0" prefWidth="60.0" text="FETCH" />
        <Button fx:id="btnCreate" layoutX="165.0" layoutY="251.0" mnemonicParsing="false"
                onAction="#onCreateButtonClick" text="CREATE" />
        <Button fx:id="btnUpdate" layoutX="265.0" layoutY="251.0" mnemonicParsing="false"
                onAction="#onUpdateButtonClick" text="UPDATE" />
        <Button fx:id="btnDelete" layoutX="365.0" layoutY="251.0" mnemonicParsing="false"
                onAction="#onDeleteButtonClick" text="DELETE" />
        <Button fx:id="btnLesson" layoutX="465.0" layoutY="251.0" mnemonicParsing="false"
                onAction="#onLessonButtonClick" text="LESSON" />
    </children>
</AnchorPane>
